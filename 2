        sample_data = {
            "Ø§Ù„Ø§Ø³Ù…": ["Ø£Ø­Ù…Ø¯ Ù…Ø­Ù…Ø¯ Ø¹Ù„ÙŠ", "Ø³Ø§Ù„Ù… Ø¹Ø¨Ø¯Ø§Ù„Ù„Ù‡ Ø§Ù„Ù‚Ø­Ø·Ø§Ù†ÙŠ", "Ù…Ø­Ù…Ø¯ ØµØ§Ù„Ø­ Ø§Ù„Ø¹Ù…Ø±ÙŠ"],
            "Ø§Ù„Ø±ØªØ¨Ø©": ["Ù†Ù‚ÙŠØ¨", "Ø±Ø§Ø¦Ø¯", "Ù…Ù„Ø§Ø²Ù… Ø£ÙˆÙ„"],
            "Ø±Ù‚Ù… Ø§Ù„Ù‡ÙˆÙŠØ©": ["1234567890", "0987654321", "1122334455"],
            "Ø±Ù‚Ù… Ø§Ù„Ø¬ÙˆØ§Ù„": ["0501234567", "0551234567", ""],
            "Ø¬Ù‡Ø© Ø§Ù„Ø¹Ù…Ù„": ["Ø§Ù„Ù‚ÙˆØ§Øª Ø§Ù„Ø®Ø§ØµØ©", "Ø§Ù„Ø­Ø±Ø³ Ø§Ù„Ù…Ù„ÙƒÙŠ", "Ø§Ù„Ù‚ÙˆØ§Øª Ø§Ù„Ø¨Ø±ÙŠØ©"],
            "Ø§Ù„Ù…Ø¤Ù‡Ù„ Ø§Ù„Ø¯Ø±Ø§Ø³ÙŠ": ["Ø¨ÙƒØ§Ù„ÙˆØ±ÙŠÙˆØ³", "Ù…Ø§Ø¬Ø³ØªÙŠØ±", "Ø«Ø§Ù†ÙˆÙŠ"]
        }

        df = pd.DataFrame(sample_data)

