        item = self.teachers_tree.item(selection[0])
        teacher_data = item['values']
        teacher_name = teacher_data[0]  # Ø§Ù„Ø§Ø³Ù… ÙÙŠ Ø§Ù„Ø¹Ù…ÙˆØ¯ Ø§Ù„Ø£ÙˆÙ„
        teacher_id_number = teacher_data[2]  # Ø±Ù‚Ù… Ø§Ù„Ù‡ÙˆÙŠØ© ÙÙŠ Ø§Ù„Ø¹Ù…ÙˆØ¯ Ø§Ù„Ø«Ø§Ù„Ø«

        # Ø§Ø³ØªØ®Ø±Ø§Ø¬ ID Ù…Ù† tags
        tags = item['tags']
        teacher_id = None
        for tag in tags:
            if tag.startswith('id_'):
                teacher_id = int(tag.split('_')[1])
                break

        # ØªØ£ÙƒÙŠØ¯ Ø§Ù„Ø­Ø°Ù
        if messagebox.askyesno("ØªØ£ÙƒÙŠØ¯ Ø§Ù„Ø­Ø°Ù", f"Ù‡Ù„ ØªØ±ÙŠØ¯ Ø­Ø°Ù Ø§Ù„Ù…Ø¯Ø±Ø³: {teacher_name}ØŸ"):
            try:
                cursor = self.db_conn.cursor()

                if teacher_id:
                    # Ø­Ø°Ù Ø§Ù„Ø¯ÙˆØ±Ø§Øª Ø§Ù„Ù…Ø±ØªØ¨Ø·Ø© Ø£ÙˆÙ„Ø§Ù‹
                    cursor.execute("DELETE FROM teacher_courses WHERE teacher_id = ?", (teacher_id,))

                    # Ø­Ø°Ù Ø§Ù„Ù…Ø¯Ø±Ø³
                    cursor.execute("DELETE FROM teachers WHERE id = ?", (teacher_id,))
                else:
                    # Ø¥Ø°Ø§ Ù„Ù… Ù†Ø¬Ø¯ IDØŒ Ù†Ø³ØªØ®Ø¯Ù… Ø±Ù‚Ù… Ø§Ù„Ù‡ÙˆÙŠØ©
                    cursor.execute("""
                        DELETE FROM teacher_courses 
                        WHERE teacher_id IN (
                            SELECT id FROM teachers WHERE id_number = ?
                        )
                    """, (teacher_id_number,))

                    cursor.execute("DELETE FROM teachers WHERE id_number = ?", (teacher_id_number,))

                self.db_conn.commit()

                if cursor.rowcount > 0:
                    messagebox.showinfo("Ù†Ø¬Ø§Ø­", "ØªÙ… Ø­Ø°Ù Ø§Ù„Ù…Ø¯Ø±Ø³ Ø¨Ù†Ø¬Ø§Ø­")
                    self._load_teachers()
                else:
                    messagebox.showwarning("ØªÙ†Ø¨ÙŠÙ‡", "Ù„Ù… ÙŠØªÙ… Ø§Ù„Ø¹Ø«ÙˆØ± Ø¹Ù„Ù‰ Ø§Ù„Ù…Ø¯Ø±Ø³")

            except Exception as e:
                messagebox.showerror("Ø®Ø·Ø£", f"Ø®Ø·Ø£ ÙÙŠ Ø­Ø°Ù Ø§Ù„Ù…Ø¯Ø±Ø³: {str(e)}")

