                day_cell = table.cell(row_idx + 1, 0)
                day_cell.text = day_name
                self._format_cell_formal(day_cell, bold=True, size=14, center=True, day=True)

                # Ø§Ù„Ø­ØµØµ
                for idx, period in enumerate(periods):
