            for idx, period in enumerate(periods):
                cell = table.cell(0, idx + 1)
                cell.text = f'Ø§Ù„Ø­ØµØ© {period[0]}\n{period[1]} - {period[2]}'
                self._format_cell_formal(cell, bold=True, size=14, center=True, header=True)

