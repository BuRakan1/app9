    def _delete_teacher(self):
        """Ø­Ø°Ù Ø§Ù„Ù…Ø¯Ø±Ø³ Ø§Ù„Ù…Ø­Ø¯Ø¯"""
        selection = self.teachers_tree.selection()
        if not selection:
            messagebox.showinfo("ØªÙ†Ø¨ÙŠÙ‡", "ÙŠØ±Ø¬Ù‰ Ø§Ø®ØªÙŠØ§Ø± Ù…Ø¯Ø±Ø³ Ù„Ø­Ø°ÙÙ‡")
            return

