                cursor.execute("""
                    INSERT INTO course_names (name, description, created_date)
                    VALUES (?, '', ?)
                """, (name, datetime.now().strftime("%Y-%m-%d")))

                self.db_conn.commit()

                # ØªØ­Ø¯ÙŠØ« Ø§Ù„Ù‚Ø§Ø¦Ù…Ø©
                courses_list.append(name)
                combo_widget['values'] = courses_list
                combo_widget.set(name)

