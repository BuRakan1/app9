            corner_cell = table.cell(0, 0)
            corner_cell.text = "Ø§Ù„Ø£ÙŠØ§Ù… / Ø§Ù„Ø­ØµØµ"
            self._format_cell_formal(corner_cell, bold=True, size=16, center=True, header=True)

