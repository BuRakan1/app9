            week_para.alignment = WD_PARAGRAPH_ALIGNMENT.CENTER
            week_run = week_para.add_run(f'Ø§Ù„Ø£Ø³Ø¨ÙˆØ¹: {week_number}')
            week_run.font.size = Pt(18)
            week_run.font.name = 'Arial'

