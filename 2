            messagebox.showerror("Ø®Ø·Ø£", f"ÙØ´Ù„ Ø¥Ù†Ø´Ø§Ø¡ Ø§Ù„Ù…Ù„Ù:\n{str(e)}")

    def _load_teachers(self):
        """ØªØ­Ù…ÙŠÙ„ Ø¨ÙŠØ§Ù†Ø§Øª Ø§Ù„Ù…Ø¯Ø±Ø³ÙŠÙ† Ù…Ù† Ù‚Ø§Ø¹Ø¯Ø© Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª Ù…Ø¹ Ø§Ù„ØªÙ†Ø³ÙŠÙ‚ Ø§Ù„Ù…Ø­Ø³Ù†"""
        # Ù…Ø³Ø­ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª Ø§Ù„Ø­Ø§Ù„ÙŠØ©
        for item in self.teachers_tree.get_children():
            self.teachers_tree.delete(item)

        try:
            cursor = self.db_conn.cursor()
            cursor.execute("""
                SELECT id, name, rank, id_number, workplace, qualification, phone 
                FROM teachers 
                ORDER BY name
            """)

            teachers = cursor.fetchall()

            # Ø¥Ø¶Ø§ÙØ© Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª Ù…Ø¹ Ø£Ù„ÙˆØ§Ù† Ù…ØªÙ†Ø§ÙˆØ¨Ø©
            for index, teacher in enumerate(teachers):
                # Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª Ø§Ù„Ù…Ø¹Ø±ÙˆØ¶Ø© (Ø¨Ø¯ÙˆÙ† ID)
                display_data = (
                    teacher[1],  # name
                    teacher[2],  # rank
                    teacher[3],  # id_number
                    teacher[4],  # workplace
                    teacher[5],  # qualification
                    teacher[6]  # phone
                )

                tag = 'evenrow' if index % 2 == 0 else 'oddrow'
                item = self.teachers_tree.insert("", tk.END, values=display_data, tags=(tag, f"id_{teacher[0]}"))

            # ØªØ­Ø¯ÙŠØ« Ø¹Ø¯Ø§Ø¯ Ø§Ù„Ù…Ø¯Ø±Ø³ÙŠÙ†
            if hasattr(self, 'teacher_count_label'):
                self.teacher_count_label.config(text=f"Ø¥Ø¬Ù…Ø§Ù„ÙŠ Ø¹Ø¯Ø¯ Ø§Ù„Ù…Ø¯Ø±Ø³ÙŠÙ†: {len(teachers)}")

        except Exception as e:
            messagebox.showerror("Ø®Ø·Ø£", f"Ø®Ø·Ø£ ÙÙŠ ØªØ­Ù…ÙŠÙ„ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª: {str(e)}")

    def _on_teacher_double_click(self, event):
        """Ø¹Ø±Ø¶ ØªÙØ§ØµÙŠÙ„ Ø§Ù„Ù…Ø¯Ø±Ø³ Ø¹Ù†Ø¯ Ø§Ù„Ù†Ù‚Ø± Ø§Ù„Ù…Ø²Ø¯ÙˆØ¬"""
        selection = self.teachers_tree.selection()
        if selection:
            item = self.teachers_tree.item(selection[0])
            values = item['values']

            # Ù†Ø§ÙØ°Ø© Ø¹Ø±Ø¶ Ø§Ù„ØªÙØ§ØµÙŠÙ„
            detail_window = tk.Toplevel(self)
            detail_window.title(f"ØªÙØ§ØµÙŠÙ„ Ø§Ù„Ù…Ø¯Ø±Ø³: {values[0]}")
            detail_window.geometry("600x500")
            detail_window.configure(bg="#f5f5f5")
            detail_window.transient(self)

            # ØªÙˆØ³ÙŠØ· Ø§Ù„Ù†Ø§ÙØ°Ø©
            detail_window.update_idletasks()
            x = (detail_window.winfo_screenwidth() - 600) // 2
            y = (detail_window.winfo_screenheight() - 500) // 2
            detail_window.geometry(f"600x500+{x}+{y}")

            # Ø¹Ø±Ø¶ Ø§Ù„Ù…Ø¹Ù„ÙˆÙ…Ø§Øª Ø¨ØªÙ†Ø³ÙŠÙ‚ Ø¬Ù…ÙŠÙ„
            header = tk.Label(
                detail_window,
                text=values[0],  # Ø§Ù„Ø§Ø³Ù…
                font=("Tajawal", 20, "bold"),
                bg="#1976d2",
                fg="white",
                pady=15
            )
            header.pack(fill=tk.X)

            # Ø¥Ø·Ø§Ø± Ø§Ù„Ù…Ø¹Ù„ÙˆÙ…Ø§Øª
            info_frame = tk.Frame(detail_window, bg="white", padx=30, pady=20)
            info_frame.pack(fill=tk.BOTH, expand=True, padx=20, pady=20)

            labels = [
                ("Ø§Ù„Ø±ØªØ¨Ø©:", values[1] if len(values) > 1 else "ØºÙŠØ± Ù…Ø­Ø¯Ø¯"),
                ("Ø±Ù‚Ù… Ø§Ù„Ù‡ÙˆÙŠØ©:", values[2] if len(values) > 2 else "ØºÙŠØ± Ù…Ø­Ø¯Ø¯"),
                ("Ø¬Ù‡Ø© Ø§Ù„Ø¹Ù…Ù„:", values[3] if len(values) > 3 else "ØºÙŠØ± Ù…Ø­Ø¯Ø¯"),
                ("Ø§Ù„Ù…Ø¤Ù‡Ù„ Ø§Ù„Ø¯Ø±Ø§Ø³ÙŠ:", values[4] if len(values) > 4 else "ØºÙŠØ± Ù…Ø­Ø¯Ø¯"),
                ("Ø±Ù‚Ù… Ø§Ù„Ø¬ÙˆØ§Ù„:", values[5] if len(values) > 5 and values[5] else "ØºÙŠØ± Ù…Ø³Ø¬Ù„")
            ]

